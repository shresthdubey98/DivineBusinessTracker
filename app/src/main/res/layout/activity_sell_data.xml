<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/buySell_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@android:color/white"
        android:elevation="5dp"
        app:logo="@drawable/ic_arrow_back"
        app:title="Data"
        app:titleMarginStart="30dp" />
    <ProgressBar
        android:id="@+id/selldata_progressbar"
        style="?android:attr/progressBarStyle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buySell_toolbar"
        android:layout_above="@+id/l2"
        android:indeterminateTint="@color/colorPrimary"
        android:visibility="gone"/>
    <ImageView
        android:id="@+id/norecord"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:src="@drawable/norecord"
        android:visibility="visible"/>

    <LinearLayout
        android:id="@+id/l2"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_above="@+id/l3"
        android:layout_below="@+id/buySell_toolbar"
        android:layout_height="wrap_content"
        android:visibility="gone"
        >
        <LinearLayout
            android:background="#AEB9FC"
            android:id="@+id/linear_layout_sell_data"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_below="@+id/buySell_toolbar"
            android:layout_above="@id/selldata_listView"
            android:paddingVertical="10dp"
            android:layout_height="wrap_content"
            android:visibility="visible"
            >

            <TextView
                android:id="@+id/serial_no_textview"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:fitsSystemWindows="true"
                android:fontFamily="serif-monospace"
                android:includeFontPadding="false"
                android:paddingHorizontal="5dp"
                android:paddingVertical="5dp"
                android:text="SNo."
                android:textAlignment="center"
                android:textColor="#21143F"
                android:textSize="16dp"
                android:textStyle="bold" />

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/product_true_name"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:fontFamily="serif-monospace"
                android:includeFontPadding="false"
                android:paddingHorizontal="5dp"
                android:paddingVertical="5dp"
                android:text="Product"
                android:textColor="#21143F"
                android:textSize="16dp"
                android:textStyle="bold" />
            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/qty_sold"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:fontFamily="serif-monospace"
                android:includeFontPadding="false"
                android:paddingHorizontal="5dp"
                android:paddingVertical="5dp"
                android:text="Qty."
                android:textColor="#21143F"
                android:textSize="16dp"
                android:textStyle="bold" />
            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/amount_sold"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:fontFamily="serif-monospace"
                android:includeFontPadding="false"
                android:paddingHorizontal="5dp"
                android:paddingVertical="5dp"
                android:text="Amt."
                android:textColor="#21143F"
                android:textSize="16sp"
                android:textStyle="bold" />
            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
        </LinearLayout>
        <ListView
            android:id="@+id/selldata_listView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"></ListView>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/l3"
        android:layout_width="fill_parent"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content"
        android:background="@drawable/border_sharpe"
        android:orientation="vertical"
        android:visibility="gone"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="right"
            android:layout_marginRight="5sp"
            android:paddingHorizontal="10dp"
            android:paddingVertical="10sp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:layout_marginHorizontal="20sp"
                />
            <TextView
                android:id="@+id/amt"
                android:layout_width="60sp"
                android:layout_height="wrap_content"
                android:text="1234.36"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:layout_marginHorizontal="10sp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="right"
            android:layout_marginRight="5sp"
            android:paddingHorizontal="10dp"
            android:paddingVertical="10sp"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_star_border_yellow_24dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Points"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:layout_marginRight="20sp"
                />
            <TextView
                android:id="@+id/pts"
                android:layout_width="60sp"
                android:layout_height="wrap_content"
                android:text="1234.36"
                android:textSize="16sp"
                android:textColor="@android:color/holo_green_dark"
                android:layout_marginHorizontal="10sp"
                />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>